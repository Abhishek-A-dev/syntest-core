{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "outDir": "./dist",
    "downlevelIteration": true,
    "lib": [
      "dom",
      "es7",
      "scripthost",
      "es2015.collection"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
